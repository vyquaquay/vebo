{% extends 'base.html.twig' %}

{% block title %}Game index{% endblock %}

{% block body %}
    <h1>Game index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Match_ID</th>
                <th>Club_1</th>
                <th>Club1_score</th>
                <th>Club2_score</th>
                <th>Club_2</th>
                <th>Stadium</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.MatchID }}</td>
                <td>{{ game.Club1 }}</td>
                <td>{{ game.Club1Score }}</td>
                <td>{{ game.Club2Score }}</td>
                <td>{{ game.Club2 }}</td>
                <td>{{ game.Stadium }}</td>
                <td>
                    <a href="{{ path('app_game_show', {'id': game.id}) }}">show</a>
                    <a href="{{ path('app_game_edit', {'id': game.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_game_new') }}">Create new</a>
{% endblock %}
